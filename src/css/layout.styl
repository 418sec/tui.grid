.border-line
    position absolute
    z-index 13

.border-line-top
    top 0
    left 0
    right 0
    height 1px

.border-line-left
    top 0
    bottom 0
    left 0
    width 1px

.border-line-right
    top 0
    bottom 0
    right 0
    width 1px

.border-line-bottom
    bottom 0
    left 0
    right 17px
    height 1px

.no-scroll-x .border-line-bottom,
.no-scroll-y .border-line-bottom
    right 0

.content-area
    position relative
    border-style solid
    border-width 0 0 1px

    &.no-scroll-x
        border-bottom-width 0

.head-area
    border-style solid
    border-width 0 0 1px

    .cell-head
        border-top-width 1px
        border-bottom-width 1px

.lside-area
    display none
    position absolute
    top 0
    left 0
    overflow hidden
    z-index 10

    .head-area
        overflow hidden

    .body-area
        position relative
        overflow scroll
        margin-right -17px

        .selection-layer
            left 1px

.rside-area
    display none
    overflow hidden

    .head-area
        position relative
        margin-right 17px
        overflow hidden
        &.no-scroll-y
            margin-right 0

    .body-area
        position relative
        overflow scroll

.body-container
    position relative
    margin-top -1px

.table-container
    position absolute

.scrollbar-head
    display block
    position absolute
    top 0
    right 0
    width 16px
    border-style solid
    border-width 1px

.scrollbar-left-bottom
    position absolute
    bottom 0
    left 0
    right 0
    height 17px

.scrollbar-right-bottom
    position absolute
    bottom 0
    right 0
    width 17px
    height 17px

.scrollbar-border
    display block
    position absolute
    right 17px
    width 1px
