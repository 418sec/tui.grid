.toolbar
    display none
    width 100%
    height 65px
    bottom 0px
    position absolute
    background #fff
    border-top  1px solid #ccc

    .total_count
        position absolute
        top 20px
        left 24px
        color #002caf
        font-weight bold

    .btn_setup
        position absolute
        right 10px
        top 14px

    .height_resize_bar
        overflow hidden
        cursor row-resize
        position absolute
        bottom 0px
        height 15px
        width 100%
        align center
        border 0
        background url(../images/icons.gif) no-repeat 50% -170px
        font-size 0
        line-height 999px
        font-size 9px
        text-align center

    .height_resize_handle
        display block
        margin 0 10px
        border-top 1px solid #ccc
        cursor row-resize
