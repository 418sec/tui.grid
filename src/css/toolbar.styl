.toolbar
    display none
    width 100%
    height 65px
    bottom 0px
    position absolute
    background #fff
    border-top  1px solid #ccc
    z-index 11

    .total-count
        position absolute
        top 20px
        left 24px
        color #002caf
        font-weight bold

    .btn-setup
        position absolute
        right 10px
        top 14px

    .height-resize-bar
        overflow hidden
        cursor row-resize
        position absolute
        bottom 0px
        height 15px
        width 100%
        border 0
        font-size 0
        text-align center

        span
            background url(../images/icons.gif) no-repeat -70px -60px
            display inline-block
            width 17px
            height 6px
            margin-top 5px


    .height-resize-handle
        display block
        margin 0 10px
        border-top 1px solid #ccc
        cursor row-resize
