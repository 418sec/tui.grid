table
    border 0
    table-layout fixed
    background-color #d8d8d8
    border-collapse separate
    border-spacing 1px
    margin 0

    th
        overflow hidden
        white-space nowrap
        *white-space pre
        text-align center
        padding 0
        border 0
        background #eee

        &.selected
            background #cdcdcd

        .sort a
            color #555
            text-decoration none

        .btn_sorting
            display inline-block
            overflow hidden
            margin-left 6px
            height 15px
            width 8px
            background url(../images/icons.gif) -20px -60px no-repeat
            vertical-align middle
            cursor pointer

        .sorting_down
            background-position 0 -60px

        .sorting_up
            background-position -10px -60px

    tr
        &.disabled
            color #b0b0b0

    td
        overflow hidden
        padding 0 10px
        *padding 1px 10px
        border 0
        white-space nowrap
        background-color #fbfbfb
        *white-space pre

        &.meta_column
            background #eee
            &.dummy
                background #eee
            &.selected
                background #cdcdcd

        &.editable
            background-color #fff

        &.dummy
            background-color #fff

        &.required
            background-color #fffdeb

        &.disabled
            color #b0b0b0

        &.focused
            padding 0 9px
            border dotted 1px #190000

        &.invalid
            padding 0 9px
            border solid 1px #ff8080

        &.ellipsis
            -o-text-overflow ellipsis /*Opera 9*/
            -moz-binding url('ellipsis.xml#ellipsis') /* Firefox */
            width 100% /* for IE6 */
            text-overflow ellipsis

        img
            vertical-align middle

        span
            &.before
                float left
                margin-right 2px
                line-height 1.5

            &.after
                float right
                margin-left 2px
                line-height 1.5

            &.input
                display block
                overflow hidden
                line-height 1.5
                *margin-left -2px
                *padding-left 2px
