.layer-state
    position absolute
    top 0
    left 0
    width 100%
    border-bottom solid 1px #ccc
    background #fff
    font-weight bold
    text-align center
    z-index 12

.layer-state-content
    padding-top 50px

.layer-state-loading
    display block
    margin 10px auto 0
    background url(../images/ani_loading.gif)
    border 0
    width 150px
    height 13px

.layer-editing
    position absolute
    display none
    background #fff
    z-index 15
    padding 0 10px
    border-style solid
    border-width 1px
    white-space nowrap

.layer-focus-border
    position absolute
    overflow hidden
    z-index 14

.layer-selection
    position absolute
    display none
    top 0
    width 0
    height 0
    border-style solid
    border-width 1px
    opacity 0.2

.layer-datepicker
    position absolute
