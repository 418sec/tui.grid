.state-layer
    position absolute
    top 0
    left 0
    width 100%
    border-bottom solid 1px #ccc
    background #fff
    font-weight bold
    text-align center
    z-index 12

    .layer-content
        padding-top 50px

        .loading-img
            display block
            margin 10px auto 0
            background url(../images/ani_loading.gif)
            border 0
            width 150px
            height 13px

.editing-layer
    position absolute
    display none
    background #fff
    z-index 15
    padding 1px 10px
    border-style solid
    border-width 1px
    white-space nowrap

.focus-layer
    div
        position absolute
        overflow hidden
        z-index 14
