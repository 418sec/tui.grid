.initializing_layer
    width 100%
    height 100%
    font-weight bold
    text-align center
    border-top solid 1px #ccc
    border-bottom solid 1px #ccc
    position absolute
    background #fff

.initializing_layer div
    margin-top 50px

.initializing_layer img
    display block
    margin 10px auto 0

.no_row_layer
    display none
    position absolute
    top 0
    left 0
    width 100%
    padding-top 50px
    border-top solid 1px #ccc
    border-bottom solid 1px #ccc
    background #fff
    font-weight bold
    text-align center

.loading_layer
    display none
    position absolute
    top 0
    left 0
    width 100%
    padding-top 50px
    border-top solid 1px #ccc
    border-bottom solid 1px #ccc
    background #fff
    font-weight bold
    text-align center
    z-index 9

    img
        display block
        margin 10px auto 0

    .loading_img
        display block
        margin 10px auto 0
        background url(../images/ani_loading.gif)
        border 0
        width 150px
        height 13px
